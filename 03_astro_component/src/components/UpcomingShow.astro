---
// props を受け取るコードが必要！
const { title, date, venue, summary } = Astro.props;
---

<section class="border border-gray-300 rounded-lg p-4 shadow hover:border-[#d70004] transition">
  <div class="pl-2">
    <h2 class="text-xl font-bold mb-2">{title}</h2>
    <p class="mb-1"><span class="font-semibold">日程：</span>{date}</p>
    <p class="mb-1"><span class="font-semibold">会場：</span>{venue}</p>
    <p class="mt-2 text-sm text-gray-700">{summary}</p>
  </div>
</section>
